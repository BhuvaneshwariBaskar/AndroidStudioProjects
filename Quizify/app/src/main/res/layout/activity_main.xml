<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="22dp"
    android:paddingVertical="44dp"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-81dp">


    <TextView
        android:id="@+id/learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensanssemiold"
        android:gravity="center"
        android:text="Learn With Our"
        android:textColor="@color/brown"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="24dp" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/opensansextrabold"
        android:gravity="center"
        android:text="Quizify"
        android:textColor="@color/dark_green"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/learn"
        app:layout_constraintStart_toStartOf="@+id/learn"
        app:layout_constraintTop_toBottomOf="@id/learn"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/cap"
        app:layout_constraintEnd_toEndOf="@+id/appName"
        app:layout_constraintStart_toStartOf="@+id/appName"
        app:layout_constraintTop_toBottomOf="@+id/appName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/welPara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/opensanssemibolditalic"
        android:gravity="center"
        android:text="Do you want to crack your round 1 in interviews? Kick start your learning with us! "
        android:textColor="@color/grey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="311dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:width="220dp"
        android:height="70dp"
        android:backgroundTint="@color/dark_green"
        android:text="Start Your Quiz"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/learn"
        app:layout_constraintStart_toStartOf="@id/learn"
        app:layout_constraintTop_toBottomOf="@id/welPara"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="311dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:width="227dp"
        android:height="70dp"
        android:backgroundTint="@color/light_green"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/signIn"
        app:layout_constraintStart_toStartOf="@id/learn"
        app:layout_constraintTop_toBottomOf="@id/signIn"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>